<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
<parameters>
        <parameter key="lunetics_locale.request_listener.class">Lunetics\LocaleBundle\EventListener\RequestListener</parameter>
    </parameters>
    <services>
        <service id="kernel.listener.request_listener" class="%lunetics_locale.request_listener.class%">
            <argument type="service" id="logger"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onRequest"/>
        </service>
    </services>
</container>